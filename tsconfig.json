{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "types": [
      "node"
    ],
    "esModuleInterop": true,
    "module": "commonjs",
    // "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "../src/*"
      ]
    },
    "moduleResolution": "node"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/_app.jsx",
    "src/context/Provider.tsx",
    "src/app/components/Posts/HeroHome/HeroForm.jsx",
    "src/app/components/Posts/page.test.jsx",
    "jest.config.ts",
    "jest.config.cts"
  ],
  "exclude": [
    "node_modules"
  ]
}
